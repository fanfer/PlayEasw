<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".data.MainPages.InfoActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="3">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight="1"
                    android:orientation="horizontal">

                    <ImageView
                        android:id="@+id/imageView"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:src="@drawable/ic_baseline_maps_ugc_24" />

                    <SearchView
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="4"
                        android:background="#F8F8F8">

                    </SearchView>


                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_alignParentBottom="true"
                    android:layout_weight="1"
                    android:background="@color/white"
                    tools:ignore="MissingConstraints">

                    <TextView
                        android:id="@+id/btn_message1"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:clickable="true"

                        android:gravity="center"
                        android:padding="4dp"
                        android:text="热门"
                        android:textColor="#AA1B1A1A"
                        android:textSize="14sp"
                        android:textStyle="bold" />

                    <TextView
                        android:id="@+id/btn_shop1"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:clickable="true"

                        android:focusable="true"
                        android:gravity="center"
                        android:padding="4dp"
                        android:text="环保"
                        android:textColor="#AA1B1A1A"
                        android:textSize="14sp"
                        android:textStyle="bold" />

                    <TextView
                        android:id="@+id/btn_core1"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:clickable="true"

                        android:gravity="center"
                        android:padding="4dp"
                        android:text="回收"
                        android:textColor="#AA1B1A1A"
                        android:textSize="14sp"
                        android:textStyle="bold" />

                    <TextView
                        android:id="@+id/btn_chat1"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:clickable="true"

                        android:gravity="center"
                        android:padding="4dp"
                        android:text="应用"
                        android:textColor="#AA1B1A1A"
                        android:textSize="14sp"
                        android:textStyle="bold" />

                    <TextView
                        android:id="@+id/btn_account1"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:clickable="true"

                        android:gravity="center"
                        android:padding="4dp"
                        android:text="推送"
                        android:textColor="#AA1B1A1A"
                        android:textSize="14sp"
                        android:textStyle="bold" />


                </LinearLayout>
            </LinearLayout>

        </FrameLayout>

        <ListView
            android:id="@+id/list_Main"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="25" />

        <LinearLayout
            android:id="@+id/linearLayout"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_alignParentBottom="true"
            android:layout_weight="3"
            android:background="@color/white"
            tools:ignore="MissingConstraints">

            <TextView
                android:id="@+id/btn_message"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:clickable="true"
                android:drawableTop="@drawable/message_btn_bg"
                android:gravity="center"
                android:padding="4dp"
                android:text="趣创"
                android:textColor="#AA1B1A1A"
                android:textSize="12sp" />

            <TextView
                android:id="@+id/btn_shop"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:clickable="true"
                android:drawableTop="@drawable/shop_btn_bg"
                android:focusable="true"
                android:gravity="center"
                android:padding="4dp"
                android:text="购创"
                android:textColor="#AA1B1A1A"
                android:textSize="12sp" />

            <TextView
                android:id="@+id/btn_core"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:clickable="true"
                android:drawableTop="@drawable/core_btn_bg"
                android:gravity="center"
                android:padding="4dp"
                android:text="源创"
                android:textColor="#AA1B1A1A"
                android:textSize="12sp" />

            <TextView
                android:id="@+id/btn_chat"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:clickable="true"
                android:drawableTop="@drawable/chat_btn_bg"
                android:gravity="center"
                android:padding="4dp"
                android:text="谈创"
                android:textColor="#AA1B1A1A"
                android:textSize="12sp" />

            <TextView
                android:id="@+id/btn_account"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:clickable="true"
                android:drawableTop="@drawable/account_btn_bg"
                android:gravity="center"
                android:padding="4dp"
                android:text="我的"
                android:textColor="#AA1B1A1A"
                android:textSize="12sp" />


        </LinearLayout>
    </LinearLayout>


</androidx.constraintlayout.widget.ConstraintLayout>